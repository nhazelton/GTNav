<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GTNav"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    x:Class="GTNav.GTNavPage">
    <StackLayout VerticalOptions="FillAndExpand">
        <SearchBar
            x:Name="MySearchBar"
            Placeholder="Search for a location..."
        />



  <ListView x:Name="LocationSuggestions" HasUnevenRows="true" HeightRequest="0">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Name}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>






        <local:CampusMap
            x:Name="MyCampusMap"
            IsShowingUser="true"
            MapType="Street"
        />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button x:Name="MyWalkButton" Grid.Row="0" Grid.Column="0" Text="Walk" BackgroundColor="Purple"/>
            <Button x:Name="MyRideButton" Grid.Row="0" Grid.Column="1" Text="Ride" BackgroundColor="Green"/>
        </Grid>
    </StackLayout>
</ContentPage>